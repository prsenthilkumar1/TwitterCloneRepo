@model TwitterClone.ViewModel.UserViewModel

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/TwitterClone.js"></script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
</head>
<body>
    <div>
        <h3>Join My Twitter Clone!</h3>
    </div>
    <div>
        Your Details
        <div>
            <label class="form-control"> UserName :</label>
            @Html.TextBoxFor(m => m.User_ID, new { @class = "form-control" })
        </div>
        <div>
            <label class="form-control"> Password :</label>            
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div>
            <label class="form-control"> Full Name :</label>
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        </div>
        <div>
            <label class="form-control"> Email:</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div>
            <label class="form-control"> Active:</label>
            @Html.CheckBoxFor(m => m.ActiveInd, new { @class = "form-control" })
        </div>
        <div>
            <input type="button" value="SignUp" id="btnSignUp"/>
        </div>
        
    </div>
</body>
</html>